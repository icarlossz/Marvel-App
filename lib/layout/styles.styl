.Layout
	display flex
	padding .5px
	margin .5em
	test(brown)
	flex-direction column
	min-height 100vh
	justify-content space-between
	background-image url('../images/battlefield.jpg')
	background-size cover
	> section
		margin .5em
	&-main
		display flex
		justify-content space-between
	&-status
		test(red)
		width 200px
	&-battle
		test(blue)
		flex 1
		margin 0 .5em
		background-image url('../images/pattern.jpg')
	&-phases
		test(yellow)
		width 200px
		position relative
	&-antagonist
		test(green)
		display flex
		justify-content space-between
	&-player
		test(brown)
		display flex
		justify-content space-between
	
