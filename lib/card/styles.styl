.Card
  width 170px
  background #800b1e
  border 3px solid #30384b
  border-radius .5em
  box-shadow 0 0 10px rgba(black, .5)
  color white
  padding .5em
  text-align center

.Card-description
  background #30384b
  padding .5em
  font-size 12px
  margin-bottom .5em
  border 1px solid black

.Card-name
	text-transform uppercase
	color lightgray
	margin 0 0 .5em 0
	font-size 1em
	
.Card-image
	width 100%
	
.Card-attack
	background black
	color white
	font-size .8em